{
  "AllowedHosts": "*",
  "UseSwagger": true,
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Http"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Level:u5}] {Timestamp:yyyy-MM-dd HH:mm:ss} ({SourceContext:l}): {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\logs\\stream-service-monitor.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Level:u5}] {Timestamp:yyyy-MM-dd HH:mm:ss} ({SourceContext:l}): {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Http",
        "Args": {
          "requestUri": "http://lxtelalogs.corp.codetel.com.do:5003",
          "queueLimitBytes": null,
          "outputTemplate": "[{Level:u5}] {Timestamp:yyyy-MM-dd HH:mm:ss} ({SourceContext:l}): {Message:lj}{NewLine}{Exception}"
        }

      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://godc:TFc23F9e2@lxteladata0002.corp.codetel.com.do:9200;http://godc:TFc23F9e2@lxteladata0003.corp.codetel.com.do:9200;http://godc:TFc23F9e2@lxteladata0004.corp.codetel.com.do:9200",
          "indexFormat": "godc-log-stream-service-monitor",
          "minimumLogEventLevel": "Verbose",
          "autoRegisterTemplate": true,
          "templateName": "godc-stream-service-monitor-template",
          "restrictedToMinimumLevel": "Information",
          "emitEventFailure": "WriteToSelfLog",
          "autoRegisterTemplateVersion": "ESv7",
          "overwriteTemplate": true,
          "registerTemplateFailure": "IndexAnyway"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId",
      "WithProcessName"
    ],
    "Properties": {
      "Application": "Stream Service Monitor"
    }
  }
}